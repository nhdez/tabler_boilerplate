<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Login to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-3' }) do |f| %>
      <div class="mb-3">
        <label class="form-label"><%= f.label :email %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-mail"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">
          <%= f.label :password %>
          <%- if devise_mapping.recoverable? %>
            <span class="form-label-description">
              <%= link_to "Forgot password?", new_password_path(resource_name) %>
            </span>
          <% end %>
        </label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Your password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <label class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <span class="form-check-label"><%= f.label :remember_me %></span>
          </label>
        </div>
      <% end %>

      <div class="form-footer">
        <%= f.submit "Sign in", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <% if devise_mapping.registerable? %>
    <div class="hr-text">or</div>
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= link_to new_registration_path(resource_name), class: "btn w-100" do %>
            Create new account
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% unless devise_mapping.registerable? || devise_mapping.recoverable? || devise_mapping.confirmable? || devise_mapping.lockable? || devise_mapping.omniauthable? %>
  <%= render "devise/shared/links" %>
<% end %>
