<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Create new account</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label class="form-label"><%= f.label :email %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-mail"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <span class="form-label-description">
              <%= @minimum_password_length %> characters minimum
            </span>
          <% end %>
        </label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label"><%= f.label :password_confirmation %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-lock-check"></i>
          </span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat password" %>
        </div>
      </div>

      <div class="form-footer">
        <%= f.submit "Create account", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <div class="hr-text">or</div>
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%= link_to new_session_path(resource_name), class: "btn w-100" do %>
          Login with existing account
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if devise_mapping.confirmable? || devise_mapping.lockable? || devise_mapping.omniauthable? %>
  <%= render "devise/shared/links" %>
<% end %>
