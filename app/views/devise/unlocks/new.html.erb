<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Unlock Account</h2>
    <p class="text-muted text-center mb-4">Your account has been locked due to an excessive number of unsuccessful sign in attempts.</p>
    
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'mt-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label class="form-label"><%= f.label :email %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-mail"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
        </div>
      </div>

      <div class="form-footer">
        <%= f.submit "Resend unlock instructions", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
