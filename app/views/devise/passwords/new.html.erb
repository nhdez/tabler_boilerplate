<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Forgot your password?</h2>
    <p class="text-muted text-center mb-4">Enter your email address and we'll send you instructions to reset your password.</p>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mt-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label class="form-label"><%= f.label :email %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-mail"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
        </div>
      </div>

      <div class="form-footer">
        <%= f.submit "Send reset instructions", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <div class="hr-text">or</div>
  <div class="card-body">
    <div class="row">
      <div class="col-6">
        <%= link_to new_session_path(resource_name), class: "btn w-100" do %>
          <i class="ti ti-login me-2"></i> Login
        <% end %>
      </div>
      <div class="col-6">
        <%= link_to new_registration_path(resource_name), class: "btn w-100" do %>
          <i class="ti ti-user-plus me-2"></i> Register
        <% end %>
      </div>
    </div>
  </div>
</div>
