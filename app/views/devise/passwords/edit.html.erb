<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Reset your password</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'mt-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <label class="form-label">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <span class="form-label-description">
              <%= @minimum_password_length %> characters minimum
            </span>
          <% end %>
        </label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-lock"></i>
          </span>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New password" %>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label"><%= f.label :password_confirmation, "Confirm new password" %></label>
        <div class="input-group input-group-flat">
          <span class="input-group-text">
            <i class="ti ti-lock-check"></i>
          </span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat password" %>
        </div>
      </div>

      <div class="form-footer">
        <%= f.submit "Reset password", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <div class="hr-text">or</div>
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%= link_to new_session_path(resource_name), class: "btn w-100" do %>
          <i class="ti ti-login me-2"></i> Back to login
        <% end %>
      </div>
    </div>
  </div>
</div>
