<div class="card-body">
  <div class="hr-text mb-3">Or</div>

  <div class="list-group">
    <%- if controller_name != 'sessions' %>
      <%= link_to new_session_path(resource_name), class: "list-group-item list-group-item-action" do %>
        <div class="row align-items-center">
          <div class="col-auto"><i class="ti ti-login fs-3"></i></div>
          <div class="col">Log in</div>
        </div>
      <% end %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to new_registration_path(resource_name), class: "list-group-item list-group-item-action" do %>
        <div class="row align-items-center">
          <div class="col-auto"><i class="ti ti-user-plus fs-3"></i></div>
          <div class="col">Sign up</div>
        </div>
      <% end %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to new_password_path(resource_name), class: "list-group-item list-group-item-action" do %>
        <div class="row align-items-center">
          <div class="col-auto"><i class="ti ti-key fs-3"></i></div>
          <div class="col">Forgot your password?</div>
        </div>
      <% end %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to new_confirmation_path(resource_name), class: "list-group-item list-group-item-action" do %>
        <div class="row align-items-center">
          <div class="col-auto"><i class="ti ti-mail fs-3"></i></div>
          <div class="col">Didn't receive confirmation instructions?</div>
        </div>
      <% end %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to new_unlock_path(resource_name), class: "list-group-item list-group-item-action" do %>
        <div class="row align-items-center">
          <div class="col-auto"><i class="ti ti-lock-open fs-3"></i></div>
          <div class="col">Didn't receive unlock instructions?</div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%- if devise_mapping.omniauthable? %>
    <div class="hr-text mb-3 mt-3">Social Login</div>
    <div class="row g-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="col">
          <%= button_to omniauth_authorize_path(resource_name, provider), class: "btn w-100", data: { turbo: false } do %>
            <i class="ti ti-brand-<%= provider.to_s.dasherize %> me-2"></i>
            Sign in with <%= OmniAuth::Utils.camelize(provider) %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
